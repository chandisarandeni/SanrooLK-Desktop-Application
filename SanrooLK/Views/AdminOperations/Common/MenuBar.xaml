<UserControl x:Class="SanrooLK.Views.AdminOperations.Common.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SanrooLK.Views.AdminOperations.Common"
             mc:Ignorable="d" 
             MinWidth="439"
             MinHeight="1117"
             Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"></ColumnDefinition>
            <ColumnDefinition Width="11"></ColumnDefinition>
            <ColumnDefinition Width="129"></ColumnDefinition>
            <ColumnDefinition Width="232"></ColumnDefinition>
            <ColumnDefinition Width="21"></ColumnDefinition>
            <ColumnDefinition Width="21"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="61"></RowDefinition>
            <RowDefinition Height="61"></RowDefinition>
            <RowDefinition Height="17"></RowDefinition>
            <RowDefinition Height="28"></RowDefinition>
            <RowDefinition Height="89"></RowDefinition>
            <RowDefinition Height="61"></RowDefinition>
            <RowDefinition Height="26"></RowDefinition>
            <RowDefinition Height="61"></RowDefinition>
            <RowDefinition Height="26"></RowDefinition>
            <RowDefinition Height="61"></RowDefinition>
            <RowDefinition Height="26"></RowDefinition>
            <RowDefinition Height="61"></RowDefinition>
            <RowDefinition Height="26"></RowDefinition>
            <RowDefinition Height="61"></RowDefinition>
            <RowDefinition Height="26"></RowDefinition>
            <RowDefinition Height="61"></RowDefinition>
            <RowDefinition Height="26"></RowDefinition>
            <RowDefinition Height="61"></RowDefinition>
            <RowDefinition Height="26"></RowDefinition>
            <RowDefinition Height="61"></RowDefinition>
            <RowDefinition Height="26"></RowDefinition>
            <RowDefinition Height="61"></RowDefinition>
            <RowDefinition Height="104"></RowDefinition>
        </Grid.RowDefinitions>

        <!--Sanroo Logo-->
        <Viewbox Stretch="Uniform"
                 Grid.Column="2"
                 Grid.Row="1">
            <Image Source="https://res.cloudinary.com/dwbw83rrr/image/upload/v1737500643/yulnav7tzmwaldnswvnz.png"
                   Width="129"
                   Height="61"/>
        </Viewbox>

        <!--Sanroo Text-->
        <Viewbox Stretch="Uniform"
                 Grid.Column="2"
                 Grid.Row="3"
                 Grid.ColumnSpan="3">
            <Label Content="Sanroo Enterprises (PVT) LTD"
                   FontFamily="Lucida Fax"
                   FontWeight="Bold"
                   Width="382"
                   Height="28"
                   FontSize="19"/>
        </Viewbox>

        <!--Dashboard Button-->
        <Grid Grid.Column="1"
              Grid.Row="5"
              Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="39"/>
                <ColumnDefinition Width="33"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="126"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="11"/>
                <RowDefinition Height="39"/>
                <RowDefinition Height="11"/>
            </Grid.RowDefinitions>

            <Viewbox Stretch="Uniform"
                     Grid.Column="0"
                     Grid.ColumnSpan="5"
                     Grid.Row="0"
                     Grid.RowSpan="3">  
                <!--Change the properties when it is copied-->
                <Border Name="btn_adminDashboard"
                        Background="Black"
                        BorderBrush="Black"
                        BorderThickness="0"
                        CornerRadius="10"
                        Width="372"
                        Height="61">
                    <Border.RenderTransform>
                        <!--Change the properties when it is copied-->
                        <ScaleTransform x:Name="scaleTransform-for-adminDashboard" />
                    </Border.RenderTransform>
                    <Border.RenderTransformOrigin>
                        <Point X="0.5" Y="0.5"/>
                    </Border.RenderTransformOrigin>
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                    To="DarkRed" Duration="0:0:0.2"/> <!--Color change Mouse Hover-->
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                    To="Black" Duration="0:0:0.2"/> <!--Color change Mouse Leave-->
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="PreviewMouseDown">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                    To="DarkRed" Duration="0:0:0.1"/> <!--Color change Mouse Click-->
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                     To="0.95" Duration="0:0:0.1"/>
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                     To="0.95" Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="PreviewMouseUp">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                    To="DarkRed" Duration="0:0:0.1"/> <!--Color change Mouse Release-->
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                     To="1" Duration="0:0:0.1"/>
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                     To="1" Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>
                    <Border.Effect>
                        <!--Change the blur rad when it is in normal button format (rad into 10)-->
                        <DropShadowEffect ShadowDepth="2"
                                          BlurRadius="15"
                                          Color="Gray"
                                          Opacity="0.2"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    
                        <!--Change the icon regarding to button-->
                        <Image Source="https://res.cloudinary.com/dwbw83rrr/image/upload/v1739677595/material-symbols--dashboard-rounded_1_hrnsup.png"
                               Width="39"
                               Height="39"
                               Margin="23,0,0,0"
                               VerticalAlignment="Center"/>

                        <!--Change the text regarding to figma design-->
                        <Label Grid.Column="1"
                               Content="Dashboard"
                               Foreground="White"
                               FontSize="20"
                               FontFamily="Lucida Fax"
                               FontWeight="Bold"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center" 
                               Margin="27,0,0,0"/>
                    </Grid>
                </Border>
            </Viewbox>
        </Grid>
        
        
    </Grid>
</UserControl>