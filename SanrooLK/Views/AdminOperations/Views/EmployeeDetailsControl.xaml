<UserControl x:Class="SanrooLK.Views.AdminOperations.Views.EmployeeDetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="890"
             MinHeight="600"
             Background="White">

    <Viewbox Stretch="Uniform" Height="540">
        <Grid Height="554">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="56"></ColumnDefinition>
                <ColumnDefinition Width="261"></ColumnDefinition>
                <ColumnDefinition Width="13"></ColumnDefinition>
                <ColumnDefinition Width="17"></ColumnDefinition>
                <ColumnDefinition Width="448"></ColumnDefinition>
                <ColumnDefinition Width="18"></ColumnDefinition>
                <ColumnDefinition Width="60"></ColumnDefinition>
                <ColumnDefinition Width="17"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"></RowDefinition>
                <RowDefinition Height="39"></RowDefinition>
                <RowDefinition Height="21"></RowDefinition>
                <RowDefinition Height="32"></RowDefinition>
                <RowDefinition Height="39"></RowDefinition>
                <RowDefinition Height="21"></RowDefinition>
                <RowDefinition Height="39"></RowDefinition>
                <RowDefinition Height="21"></RowDefinition>
                <RowDefinition Height="39"></RowDefinition>
                <RowDefinition Height="21"></RowDefinition>
                <RowDefinition Height="39"></RowDefinition>
                <RowDefinition Height="21"></RowDefinition>
                <RowDefinition Height="39"></RowDefinition>
                <RowDefinition Height="21"></RowDefinition>
                <RowDefinition Height="39"></RowDefinition>
                <RowDefinition Height="21"></RowDefinition>
                <RowDefinition Height="39"></RowDefinition>
                <RowDefinition Height="21"></RowDefinition>
            </Grid.RowDefinitions>

            <!-- Title Row -->
            <Viewbox Stretch="Uniform"
                     Grid.Column="0"
                     Grid.Row="1"
                     Grid.ColumnSpan="8">
                <Label Content="Employee Details"
                       FontFamily="Lucida Fax"
                       FontSize="30"
                       FontWeight="Bold"/>
            </Viewbox>

            <!-- Data Separator -->
            <Viewbox Stretch="Uniform"
                     Grid.Column="0"
                     Grid.Row="2"
                     Grid.ColumnSpan="8">
                <Label Content="_________________________________________________________________________________________________________________________________________________________________________________________________________"
                       FontFamily="Lucida Fax"
                       FontSize="30"
                       FontWeight="Bold"/>
            </Viewbox>

            <!-- Data Binding Part -->
            <Viewbox Stretch="Uniform"
                     Grid.Column="1"
                     Grid.Row="4">
                <Label Content="Employee ID"
                       FontFamily="Lucida Fax"
                       FontSize="30"
                       FontWeight="Bold"
                       HorizontalAlignment="Left" Width="311"/>
            </Viewbox>

            <Viewbox Stretch="Uniform"
                     Grid.Column="2"
                     Grid.Row="4">
                <Label Content=":" FontFamily="Lucida Fax"
                       FontSize="500"
                       FontWeight="Bold"
                       HorizontalAlignment="Center" Width="311" Height="646"
                       VerticalAlignment="Center"/>
            </Viewbox>

            <!-- Data binding for EmployeeID -->
            <Viewbox Stretch="Uniform" Grid.Column="4" Grid.Row="4">
                <Border Background="White" BorderBrush="Black" BorderThickness="0"
                        CornerRadius="10" Width="629" Height="50">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="5" Color="Gray" Opacity="20"/>
                    </Border.Effect>
                    <TextBox Name="txt_employeeID"
                             HorizontalAlignment="Center"
                             IsReadOnly="True"
                             VerticalAlignment="Center"
                             Width="608"
                             Height="40"
                             Padding="0, 5, 0, 5"
                             Background="Transparent"
                             CaretBrush="#C1C1D2"
                             FontFamily="Lucida Fax"
                             FontSize="20"
                             Foreground="Gray"
                             VerticalContentAlignment="Center"
                             BorderThickness="0"
                             Text="{Binding Employee.EmployeeID}"/>
                </Border>
            </Viewbox>

            <!-- Repeat for other fields -->

            <!-- Name -->
            <Viewbox Stretch="Uniform"
                     Grid.Column="1"
                     Grid.Row="6">
                <Label Content="Name"
                       FontFamily="Lucida Fax"
                       FontSize="30"
                       FontWeight="Bold"
                       HorizontalAlignment="Left" Width="311"/>
            </Viewbox>

            <Viewbox Stretch="Uniform"
                     Grid.Column="2"
                     Grid.Row="6">
                <Label Content=":" FontFamily="Lucida Fax"
                       FontSize="500"
                       FontWeight="Bold"
                       HorizontalAlignment="Center" Width="311" Height="646"
                       VerticalAlignment="Center"/>
            </Viewbox>

            <!-- Data binding for EmployeeName -->
            <Viewbox Stretch="Uniform" Grid.Column="4" Grid.Row="6">
                <Border Background="White" BorderBrush="Black" BorderThickness="0"
                        CornerRadius="10" Width="629" Height="50">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="5" Color="Gray" Opacity="20"/>
                    </Border.Effect>
                    <TextBox Name="txt_employeeName"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Width="608"
                             Height="40"
                             Padding="0, 5, 0, 5"
                             Background="Transparent"
                             CaretBrush="#C1C1D2"
                             FontFamily="Lucida Fax"
                             FontSize="20"
                             Foreground="Gray"
                             VerticalContentAlignment="Center"
                             BorderThickness="0"
                             Text="{Binding Employee.EmployeeName}"/>
                </Border>
            </Viewbox>

            <!-- NIC -->
            <Viewbox Stretch="Uniform"
         Grid.Column="1"
         Grid.Row="8">
                <Label Content="NIC"
           FontFamily="Lucida Fax"
           FontSize="30"
           FontWeight="Bold"
           HorizontalAlignment="Left" Width="311"/>
            </Viewbox>

            <Viewbox Stretch="Uniform"
         Grid.Column="2"
         Grid.Row="8">
                <Label Content=":" FontFamily="Lucida Fax"
           FontSize="500"
           FontWeight="Bold"
           HorizontalAlignment="Center" Width="311" Height="646"
           VerticalAlignment="Center"/>
            </Viewbox>

            <!-- Data binding for NIC -->
            <Viewbox Stretch="Uniform" Grid.Column="4" Grid.Row="8">
                <Border Background="White" BorderBrush="Black" BorderThickness="0"
            CornerRadius="10" Width="629" Height="50">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="5" Color="Gray" Opacity="20"/>
                    </Border.Effect>
                    <TextBox Name="txt_employeeNIC"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Width="608"
                 Height="40"
                 Padding="0, 5, 0, 5"
                 Background="Transparent"
                 CaretBrush="#C1C1D2"
                 FontFamily="Lucida Fax"
                 FontSize="20"
                 Foreground="Gray"
                 VerticalContentAlignment="Center"
                 BorderThickness="0"
                 Text="786245135V"/>
                </Border>
            </Viewbox>

            <!-- Date of Birth -->
            <Viewbox Stretch="Uniform"
         Grid.Column="1"
         Grid.Row="10">
                <Label Content="Date of Birth"
           FontFamily="Lucida Fax"
           FontSize="30"
           FontWeight="Bold"
           HorizontalAlignment="Left" Width="311"/>
            </Viewbox>

            <Viewbox Stretch="Uniform"
         Grid.Column="2"
         Grid.Row="10">
                <Label Content=":" FontFamily="Lucida Fax"
           FontSize="500"
           FontWeight="Bold"
           HorizontalAlignment="Center" Width="311" Height="646"
           VerticalAlignment="Center"/>
            </Viewbox>

            <!-- Data binding for Date of Birth -->
            <Viewbox Stretch="Uniform" Grid.Column="4" Grid.Row="10">
                <Border Background="White" BorderBrush="Black" BorderThickness="0"
            CornerRadius="10" Width="629" Height="50">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="5" Color="Gray" Opacity="20"/>
                    </Border.Effect>
                    <TextBox Name="txt_employeeDoB"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Width="608"
                 Height="40"
                 Padding="0, 5, 0, 5"
                 Background="Transparent"
                 CaretBrush="#C1C1D2"
                 FontFamily="Lucida Fax"
                 FontSize="20"
                 Foreground="Gray"
                 VerticalContentAlignment="Center"
                 BorderThickness="0"
                 Text="1978-10-23"/>
                </Border>
            </Viewbox>

            <!-- Email Address -->
            <Viewbox Stretch="Uniform"
         Grid.Column="1"
         Grid.Row="12">
                <Label Content="Email Address"
           FontFamily="Lucida Fax"
           FontSize="30"
           FontWeight="Bold"
           HorizontalAlignment="Left" Width="311"/>
            </Viewbox>

            <Viewbox Stretch="Uniform"
         Grid.Column="2"
         Grid.Row="12">
                <Label Content=":" FontFamily="Lucida Fax"
           FontSize="500"
           FontWeight="Bold"
           HorizontalAlignment="Center" Width="311" Height="646"
           VerticalAlignment="Center"/>
            </Viewbox>

            <!-- Data binding for Email -->
            <Viewbox Stretch="Uniform" Grid.Column="4" Grid.Row="12">
                <Border Background="White" BorderBrush="Black" BorderThickness="0"
            CornerRadius="10" Width="629" Height="50">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="5" Color="Gray" Opacity="20"/>
                    </Border.Effect>
                    <TextBox Name="txt_employeeEmail"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Width="608"
                 Height="40"
                 Padding="0, 5, 0, 5"
                 Background="Transparent"
                 CaretBrush="#C1C1D2"
                 FontFamily="Lucida Fax"
                 FontSize="20"
                 Foreground="Gray"
                 VerticalContentAlignment="Center"
                 BorderThickness="0"
                 Text="saman@gmail.com"/>
                </Border>
            </Viewbox>

            <!-- Contact Number -->
            <Viewbox Stretch="Uniform"
         Grid.Column="1"
         Grid.Row="14">
                <Label Content="Contact Number"
           FontFamily="Lucida Fax"
           FontSize="30"
           FontWeight="Bold"
           HorizontalAlignment="Left" Width="311"/>
            </Viewbox>

            <Viewbox Stretch="Uniform"
         Grid.Column="2"
         Grid.Row="14">
                <Label Content=":" FontFamily="Lucida Fax"
           FontSize="500"
           FontWeight="Bold"
           HorizontalAlignment="Center" Width="311" Height="646"
           VerticalAlignment="Center"/>
            </Viewbox>

            <!-- Data binding for Contact -->
            <Viewbox Stretch="Uniform" Grid.Column="4" Grid.Row="14">
                <Border Background="White" BorderBrush="Black" BorderThickness="0"
            CornerRadius="10" Width="629" Height="50">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="5" Color="Gray" Opacity="20"/>
                    </Border.Effect>
                    <TextBox Name="txt_employeeContact"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Width="608"
                 Height="40"
                 Padding="0, 5, 0, 5"
                 Background="Transparent"
                 CaretBrush="#C1C1D2"
                 FontFamily="Lucida Fax"
                 FontSize="20"
                 Foreground="Gray"
                 VerticalContentAlignment="Center"
                 BorderThickness="0"
                 Text="0751256235"/>
                </Border>
            </Viewbox>



            <!-- Edit Icon -->
            <Viewbox Grid.Column="5"
                     Grid.Row="4" Margin="0,0,-60,0">
                <Border Name="btn_addEmploye"
                        Background="Black"
                        BorderBrush="Black"
                        BorderThickness="0"
                        CornerRadius="10"
                        Width="60"
                        Height="60">
                    <Border.RenderTransform>
                        <!--Change the properties when it is copied-->
                        <ScaleTransform x:Name="scaleTransformForaddEmployee" />
                    </Border.RenderTransform>
                    <Border.RenderTransformOrigin>
                        <Point X="0.5" Y="0.5"/>
                    </Border.RenderTransformOrigin>
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="DarkRed" Duration="0:0:0.2"/>
                                    <!--Color change Mouse Hover-->
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="Black" Duration="0:0:0.2"/>
                                    <!--Color change Mouse Leave-->
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="PreviewMouseDown">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="DarkRed" Duration="0:0:0.1"/>
                                    <!--Color change Mouse Click-->
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                             To="0.95" Duration="0:0:0.1"/>
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                             To="0.95" Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="PreviewMouseUp">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="DarkRed" Duration="0:0:0.1"/>
                                    <!--Color change Mouse Release-->
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                             To="1" Duration="0:0:0.1"/>
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                             To="1" Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>
                    <Border.Effect>
                        <!--Change the blur rad when it is in normal button format (rad into 10)-->
                        <DropShadowEffect ShadowDepth="2"
                                                              BlurRadius="15"
                                                              Color="Gray"
                                                              Opacity="0.2"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!--Image of the button-->
                        <Image Source="https://res.cloudinary.com/dwbw83rrr/image/upload/v1741122400/akar-icons--edit_q72utu.png"
                               Width="40"
                               Height="40"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="10,0,0,0"/>
                    </Grid>
                </Border>
            </Viewbox>







            <!--Delete Button-->
            <Viewbox Grid.Column="5"
                     Grid.Row="6" Margin="0,0,-60,0">
                <Border Name="btn_deleteEmployee"
                        Background="Black"
                        BorderBrush="Black"
                        BorderThickness="0"
                        CornerRadius="10"
                        Width="60"
                        Height="60">
                    <Border.RenderTransform>
                        <!--Change the properties when it is copied-->
                        <ScaleTransform x:Name="scaleTransformFordeleteEmployee" />
                    </Border.RenderTransform>
                    <Border.RenderTransformOrigin>
                        <Point X="0.5" Y="0.5"/>
                    </Border.RenderTransformOrigin>
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="DarkRed" Duration="0:0:0.2"/>
                                    <!--Color change Mouse Hover-->
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="Black" Duration="0:0:0.2"/>
                                    <!--Color change Mouse Leave-->
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="PreviewMouseDown">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="DarkRed" Duration="0:0:0.1"/>
                                    <!--Color change Mouse Click-->
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                             To="0.95" Duration="0:0:0.1"/>
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                             To="0.95" Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="PreviewMouseUp">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="DarkRed" Duration="0:0:0.1"/>
                                    <!--Color change Mouse Release-->
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                             To="1" Duration="0:0:0.1"/>
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                             To="1" Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>
                    <Border.Effect>
                        <!--Change the blur rad when it is in normal button format (rad into 10)-->
                        <DropShadowEffect ShadowDepth="2"
                                                              BlurRadius="15"
                                                              Color="Gray"
                                                              Opacity="0.2"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!--Image of the button-->
                        <Image Source="https://res.cloudinary.com/dwbw83rrr/image/upload/v1741122400/weui--delete-filled_b6l4qc.png"
                               Width="40"
                               Height="40" Grid.ColumnSpan="2" Margin="10,10,10,10"
                               />
                    </Grid>
                </Border>
            </Viewbox>




            <!--Save Button-->
            <Viewbox Grid.Column="5"
                     Grid.Row="14" Margin="0,0,-60,0">
                <Border Name="btn_saveEmployee"
                        MouseDown="btn_saveEmployee_Click"
                        Background="Black"
                        BorderBrush="Black"
                        BorderThickness="0"
                        CornerRadius="10"
                        Width="60"
                        Height="60">
                    <Border.RenderTransform>
                        <!--Change the properties when it is copied-->
                        <ScaleTransform x:Name="scaleTransformForsaveEmployee" />
                    </Border.RenderTransform>
                    <Border.RenderTransformOrigin>
                        <Point X="0.5" Y="0.5"/>
                    </Border.RenderTransformOrigin>
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="DarkRed" Duration="0:0:0.2"/>
                                    <!--Color change Mouse Hover-->
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="Black" Duration="0:0:0.2"/>
                                    <!--Color change Mouse Leave-->
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="PreviewMouseDown">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="DarkRed" Duration="0:0:0.1"/>
                                    <!--Color change Mouse Click-->
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                             To="0.95" Duration="0:0:0.1"/>
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                             To="0.95" Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="PreviewMouseUp">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="DarkRed" Duration="0:0:0.1"/>
                                    <!--Color change Mouse Release-->
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                             To="1" Duration="0:0:0.1"/>
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                             To="1" Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>
                    <Border.Effect>
                        <!--Change the blur rad when it is in normal button format (rad into 10)-->
                        <DropShadowEffect ShadowDepth="2"
                                                              BlurRadius="15"
                                                              Color="Gray"
                                                              Opacity="0.2"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!--Image of the button-->
                        <Image Source="https://res.cloudinary.com/dwbw83rrr/image/upload/v1741122400/bx--save_xkh3no.png"
                               Width="40"
                               Height="40" Grid.ColumnSpan="2" Margin="10,10,10,10"/>
                    </Grid>
                </Border>
            </Viewbox>


        </Grid>
    </Viewbox>
</UserControl>
